<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elpassion.android.commons.recycler_example">

    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".menu.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".list.SimpleListActivity" />

        <activity android:name=".list.BasicListActivity" />

        <activity android:name=".group.RecyclerWithSectionActivity" />

        <activity android:name=".group.BasicRecyclerWithSectionActivity" />

        <activity android:name=".group.MutableRecyclerWithSectionsActivity" />

        <activity android:name=".group.StableMutableRecyclerWithSectionsActivity" />

        <activity android:name=".group.BasicMutableRecyclerWithSectionsActivity" />

        <activity android:name=".group.BasicContactsListActivity" />

    </application>

</manifest>